{# Basic TWIG report template for ZabbixReports #}
<html>
{% block html %}
<head>
{% block head %}
	<title>{% block title %}Default Report Title{% endblock %}</title>
	
	{# specify base dir for \mPDF #}
	<base href="{{ BASE }}" />
	
	{# use default CSS #}
	{% include "zabbixreports-css.html.twig" %}

	{# include custom report CSS if available #}
	{% include 'report-css.html.twig' ignore missing %}	
	
{% endblock %}{# head #}
</head>
<body>
{% block body %}

<htmlpageheader name="defaultReportHeader">
{% block header %}
<div class="header">
	<div class="header-title">{{ block('title') }}</div>
	<div class="header-date">{{ "now"|date(timeformat) }}</div>
</div>
{% endblock %}{# header #}
</htmlpageheader>

<htmlpagefooter name="defaultReportFooter">
{% block footer %}
<div class="footer">
	<div class="footer-logo">generated by <img class="footer-logo-img" src="{{ TEMPLATEDIR ~ '/images/logo/zabbixreports_logo_100x12.png' }}" /></div>
	<div class="footer-pageno">page {PAGENO}</div>
</div>
{% endblock %} {# footer #}
</htmlpagefooter>

{% block report %}
<h1>{{ block('title') }}</h1>
<p>Override blocks "title" and "report" to customize.</p>
{% endblock %} {# report #}

{% endblock %}{# body #}
</body>
{% endblock %}{# html #}
</html>
